@model List<TechJobPortal.Models.JobListing>

@{
    ViewData["Title"] = "Job Listings";
}


<div class="container">
    <div class="row">
        <div class="col-12 col-md-10 offset-md-1">
            <h2>@ViewData["Title"]</h2>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Job ID</th>
                        <th>Job Title</th>
                        <th>Company Name</th>
                        <th>Location</th>
                        <th>Job Type</th>
                        <th>Posted Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var job in Model)
                    {
                        <tr>
                            <td>@job.Id</td>
                            <td>
                                <a asp-controller="JobListing" asp-action="Details" asp-route-id="@job.Id">
                                    @job.Title
                                </a>
                            </td>
                            <td>@job.CompanyName</td>
                            <td>@job.Location</td>
                            <td>@job.JobType</td>
                            <td>Posted on: @job.PostedDate.ToString("MMM dd, yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@{
    Layout = "_Layout";
}
